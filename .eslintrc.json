{
    "env": {
        "browser": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "html"
    ],
    "rules": {
        "camelcase": 2,
        "curly": 2,
        "brace-style": [
            2,
            "1tbs"
        ],
        "quotes": [
            2,
            "single"
        ],
        "semi": [
            2,
            "never"
        ],
        "space-infix-ops": 2
    }
}